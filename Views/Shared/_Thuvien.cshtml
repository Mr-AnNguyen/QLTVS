<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <script src="https://use.fontawesome.com/013ca4cd1b.js"></script>
    <link href="~/css/sach.css" rel="stylesheet" />
    @await RenderSectionAsync("css", required: false)
</head>
<body>
    <div class="menu">
        <div class="title">
            <div class="icon">
                <i class="fa fa-bars fa-2x" aria-hidden="true"></i>
            </div>
            <div class="text">QL Thư Viện</div>
        </div>
        <div class="menu-content">
            <a href="/sach" class="memu-item">
                <div class="memu-item-icon"><i class="fa fa-book" aria-hidden="true"></i></div>
                <div class="memu-item-text">
                    Sách
                </div>
            </a>
            <a href="/loaisach" class="memu-item">
                <div class="memu-item-icon"><i class="fa fa-address-book" aria-hidden="true"></i></div>
                <div class="memu-item-text">
                    Loại Sách
                </div>
            </a>
            <a href="/muontra" class="memu-item">
                <div class="memu-item-icon"><i class="fa fa-retweet" aria-hidden="true"></i></div>
                <div class="memu-item-text">
                    Mượn/Trả
                </div>
            </a>
            <a href="/docgia" class="memu-item">
                <div class="memu-item-icon"><i class="fa fa-id-card" aria-hidden="true"></i></div>
                <div class="memu-item-text">
                    Đọc Giả
                </div>
            </a>
            <a href="/loaisach" class="memu-item">
                <div class="memu-item-icon"><i class="fa fa-bar-chart" aria-hidden="true"></i></div>
                <div class="memu-item-text">
                    Thống kê
                </div>
            </a>
        </div>
    </div>
    @RenderBody()

    @*<script src="~/js/jquery-3.6.0.min.js"></script>*@
    @await RenderSectionAsync("Scripts", required: true)
</body>
</html>
